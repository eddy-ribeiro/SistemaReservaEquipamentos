@page "/login"
@inject NavigationManager Navigation

<h3>Login</h3>

<div class="form-group">
    <label>Usuário</label>
    <input class="form-control" @bind="usuario" />
</div>
<div class="form-group">
    <label>Senha</label>
    <input class="form-control" type="password" @bind="senha" />
</div>
<button class="btn btn-primary mt-2" @onclick="RealizarLogin">Entrar</button>

@code {
    private string usuario = string.Empty;
    private string senha = string.Empty;

    private void RealizarLogin()
    {
        // Autenticação fictícia
        if (usuario == "admin" && senha == "123")
        {
            Navigation.NavigateTo("/dashboard");
        }
        else
        {
            // Exibir erro futuramente
        }
    }
}
